@model ReferralRock.Test.Models.ViewModels.EditReferralViewModel

<form asp-controller="Referrals" asp-action="UpdateReferral" method="post" asp-route-memberId="@Model.Referral.ReferringMemberId">
    <input type="hidden" asp-for="Referral.Id" value="@Model.Referral.Id"/>
    <input type="hidden" asp-for="Referral.ProgramId" value="@Model.Referral.ProgramId"/>
    <div class="container d-flex justify-content-center">
        <div class="col-md-12 offset-md-4">
            <div class="row mb-3">
                <h2>
                    Referral Details
                </h2>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="Referral.FirstName"></label>
                </div>
                <div class="col-md-4">
                    <label asp-for="Referral.LastName"></label>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <input class="form-control" asp-for="Referral.FirstName"/>
                </div>
                <div class="col-md-4">
                    <input class="form-control" asp-for="Referral.LastName"/>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="Referral.Email"></label>
                </div>
                <div class="col-md-4">
                    <label asp-for="Referral.ExternalIdentifier"></label>
                </div>
            </div>
            <div class="row mb-5">
                <div class="col-md-4">
                    <input class="form-control" asp-for="Referral.Email"/>
                </div>
                <div class="col-md-4">
                    <input class="form-control" asp-for="Referral.ExternalIdentifier"/>
                </div>
            </div>

            <div class="row mb-3">
                <h2>Additional Details</h2>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <label asp-for="Referral.Amount"></label>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <input class="form-control" asp-for="Referral.Amount" required="required"/>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <label asp-for="Referral.PublicNote"></label>
                </div>
            </div>
            <div class="row mb-5">
                <div class="col-md-8">
                    <textarea class="form-control" asp-for="Referral.PublicNote" rows="5"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-blue col-md-8">Save Changes</button>
                </div>
            </div>
        </div>

    </div>
</form>
